<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ngo_detail_adapter_profile_pic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_launcher"
        />

    <TextView
        android:id="@+id/ngo_detail_adapter_name"
        android:layout_toRightOf="@id/ngo_detail_adapter_profile_pic"
        android:layout_marginLeft="15dp"
        android:layout_alignTop="@id/ngo_detail_adapter_profile_pic"
        android:layout_marginTop="2dp"
        android:textSize="18sp"
        android:textColor="@color/dark_grey"
        android:fontFamily="@font/poppins_medium"
        android:text="NSS Rakht Daan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

 <TextView
        android:id="@+id/ngo_detail_adapter_address"
        android:layout_toRightOf="@id/ngo_detail_adapter_profile_pic"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/ngo_detail_adapter_name"
        android:layout_marginTop="2dp"
        android:textSize="12sp"
        android:textColor="@color/dark_grey"
        android:fontFamily="@font/poppins_medium"
        android:text="Paras Hospital, Bailey Road, Patna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/ngo_detail_adapter_time"
        android:layout_alignBottom="@id/ngo_detail_adapter_profile_pic"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:text="15 min ago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/line_ngoDetail"
        android:layout_width="match_parent"
        android:background="@color/light_grey"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="25dp"
        android:layout_below="@+id/ngo_detail_adapter_time"
        android:layout_height="1dp"/>

</RelativeLayout>