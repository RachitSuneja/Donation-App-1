<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/imageRecycler1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="#F4F4F4" />

        <TextView
            android:id="@+id/headingRecycler1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/imageRecycler1"
            android:fontFamily="@font/poppins"
            android:text="Emergency! O+ blood required for child of age 12..."
            android:textColor="#000000"
            android:textFontWeight="700"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/locationRecycler1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/headingRecycler1"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/imageRecycler1"
            android:fontFamily="@font/poppins"
            android:text="Paras Hospital, Bailey Road, Patna"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/timeRecycler1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/locationRecycler1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins"
            android:text="2 mins ago"
            android:textSize="10dp" />


    </RelativeLayout>

    <View
        android:id="@+id/border_view1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/card1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#E5E5E5" />


</RelativeLayout>